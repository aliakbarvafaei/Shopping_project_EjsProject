<% if(stateToast=="Register"){%>
  <div class="toast autoToast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="3000" style="position: absolute; top: 1rem; right: 1rem;">
    <div class="toast-header" style="background-color:green;">

      <strong class="mr-auto" style="color:white;">success</strong>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close"  style="color:white;">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body">
      Your sign in was successful.<br>Please login account...
   </div>
  </div>
<%}%>
<% if(stateToast=="login"){%>
  <div class="toast autoToast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="3000" style="position: absolute; top: 1rem; right: 1rem;">
    <div class="toast-header" style="background-color:green;">

      <strong class="mr-auto" style="color:white;">success</strong>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close"  style="color:white;">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body">
      Your log in was successful.
   </div>
  </div>
<%}%>
<% if(stateToast=="errorLogin"){%>
  <div class="toast autoToast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="3000" style="position: absolute; top: 1rem; right: 1rem;">
    <div class="toast-header" style="background-color:#c90124;">

      <strong class="mr-auto" style="color:white;">failed</strong>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close"  style="color:white;">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body">
      Your log in was not successful.
   </div>
  </div>
<% } %>
<% if(stateToast=="Logout"){%>
  <div class="toast autoToast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="3000" style="position: absolute; top: 1rem; right: 1rem;">
    <div class="toast-header" style="background-color:gray;">

      <strong class="mr-auto" style="color:white;">success</strong>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close"  style="color:white;">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body">
      Your log out was successful.
   </div>
  </div>
<% } %>
<% if(stateToast=="repeat"){%>
  <div class="toast autoToast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="3000" style="position: absolute; top: 1rem; right: 1rem;">
    <div class="toast-header" style="background-color:#FFC000;">

      <strong class="mr-auto" style="color:white;">Warning!</strong>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close"  style="color:white;">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body">
      This email address is already being used.
   </div>
  </div>
<% } %>
